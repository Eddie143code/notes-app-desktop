{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "lib": ["DOM", "ES2015", "ES2016", "ES2017"],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["src/**/*"]
}